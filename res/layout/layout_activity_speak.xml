<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/textView_sentence_speak"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="18"
        android:background="@drawable/text_border"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:text="She sells seashells by the seashore. The shells that she sells are seashells I&apos;m sure."
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_recognizedSentence_speak"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8"
        android:background="@drawable/text_border"
        android:scrollbars="vertical"
        android:text="She sells seashells by the seashore. The shells that she sells are seashells I&apos;m sure." />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="4"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/imageView_gauge_speak"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
             />

        <SeekBar
            android:id="@+id/seekBar_textSize_speak"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="90"
            android:progress="50" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="6"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_start_speak"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="START"
            />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_information_speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/20, 00:00.00"
                android:textColor="#AAAAAAAA"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/textView_timer_speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00.00"
                android:textColor="#AAAAAAAA"
                android:textStyle="bold|italic" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
